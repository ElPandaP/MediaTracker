{
  "manifest_version": 3,
  "name": "Netflix Tracker",
  "version": "1.0.0",
  "description": "Extrae informaci√≥n de Netflix para tu tracker personal",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.netflix.com/*"
  ],
  "action":  {
    "default_popup":  "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches":  ["https://www.netflix.com/*"],
      "js": ["injected.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ]
}